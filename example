#include <stdio.h>
#include <stdlib.h>

int main()
{
  int i,first,last,middle,num,search,array[50];

  printf("Enter number of integers\n");
  scanf("%d",&num);

  printf("Enter %d integers\n", num);

  for (i= 0; i <num; i++)
    scanf("%d", &array[i]);

  printf("Enter value to find\n");
  scanf("%d", &search);

  first = 0;
  last = num - 1;
  middle =(first+last)/2;

  while (first <= last) {
    if (array[middle] < search)
      first = middle + 1;
    else if (array[middle] == search) {
      printf("%d found at location %d.\n", search, middle+1);
      break;
    }
    else
      last = middle - 1;

    middle = (first + last)/2;
  }
  if (first > last)
    printf("Sorry! %d isn't in the list.\n", search);

  return 0;
}

